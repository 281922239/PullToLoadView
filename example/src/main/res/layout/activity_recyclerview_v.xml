<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <com.droidworker.pulltoloadview.impl.recyclerview.PullToLoadVerticalRecyclerView
        android:id="@+id/recycler_view"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:content_view_id="@layout/layout_my_recyclerview"
        android:paddingTop="@dimen/item_divider"
        app:underBar="true"
        app:underbar_header_background="@color/page_background"
        app:use_max_scroll="true"/>

    <include layout="@layout/toolbar"/>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.droidworker.example"
          xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name="com.droidworker.example.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.droidworker.example.recyclerview.RecyclerViewActivity"/>
        <activity android:name="com.droidworker.example.recyclerview.RecyclerViewHorizontalActivity"/>
        <activity android:name="com.droidworker.example.WebViewActivity"/>
        <activity android:name="com.droidworker.example.scrollview.ScrollViewActivity"/>
        <activity android:name="com.droidworker.example.scrollview.HorizontalScrollViewActivity"/>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_loading_container"
              android:layout_width="80dp"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_loading_img"
        android:layout_width="@dimen/rotate_arrow_size"
        android:layout_height="@dimen/rotate_arrow_size"
        android:layout_gravity="center"
        android:src="@drawable/default_rotate"/>

    <TextView
        android:id="@+id/tv_loading_text"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:textColor="@color/rotate_loading_color"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_loading_container"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:background="@color/loading_layout_background"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_loading_img"
        android:layout_width="@dimen/rotate_arrow_size"
        android:layout_height="@dimen/rotate_arrow_size"
        android:layout_gravity="center"
        android:contentDescription="@string/rotate_img"
        android:src="@drawable/default_rotate"/>

    <TextView
        android:id="@+id/tv_loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"/>

</LinearLayout>